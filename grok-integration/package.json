{
  "name": "grok-integration",
  "displayName": "Grok Integration",
  "description": "Integrate Grok AI into VS Code",
  "version": "1.0.0",
  "publisher": "ndestates",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndestates/vscode-grok4.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grok-integration.askGrok",
        "title": "Ask Grok about Selected Code"
      },
      {
        "command": "grok-integration.askGrokInline",
        "title": "Ask Grok (Inline Chat)"
      },
      {
        "command": "grok-integration.editWithGrok",
        "title": "Edit with Grok"
      },
      {
        "command": "grok-integration.explainCode",
        "title": "Explain Code with Grok"
      },
      {
        "command": "grok-integration.reviewCode",
        "title": "Review Code with Grok"
      },
      {
        "command": "grok-integration.enterLicenseKey",
        "title": "Enter License Key"
      },
      {
        "command": "grok-integration.checkLicense",
        "title": "Check License Status"
      },
      {
        "command": "grok-integration.purchaseLicense",
        "title": "Purchase License"
      }
    ],
    "chatParticipants": [
      {
        "id": "grok-integration.grok",
        "name": "grok",
        "description": "Ask Grok AI questions about your code",
        "isSticky": true,
        "commands": [
          {
            "name": "explain",
            "description": "Explain code in detail"
          },
          {
            "name": "review",
            "description": "Review code quality and suggest improvements"
          },
          {
            "name": "debug",
            "description": "Help debug issues and find bugs"
          },
          {
            "name": "refactor",
            "description": "Suggest code refactoring improvements"
          },
          {
            "name": "test",
            "description": "Generate unit tests for code"
          },
          {
            "name": "optimize",
            "description": "Suggest performance optimizations"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Grok Integration",
      "properties": {
        "grokIntegration.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your xAI API key for accessing Grok",
          "scope": "application"
        },
        "grokIntegration.licenseKey": {
          "type": "string",
          "default": "GI-DEMO1234-ABCD5678-EFGH9012",
          "description": "Your Grok Integration license key (Demo key included)",
          "scope": "application"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "grok-integration.explainCode",
          "when": "editorHasSelection",
          "group": "grok@1"
        },
        {
          "command": "grok-integration.reviewCode", 
          "when": "editorHasSelection",
          "group": "grok@2"
        },
        {
          "command": "grok-integration.editWithGrok",
          "when": "editorHasSelection",
          "group": "grok@3"
        }
      ],
      "commandPalette": [
        {
          "command": "grok-integration.askGrokInline",
          "when": "editorIsOpen"
        },
        {
          "command": "grok-integration.editWithGrok", 
          "when": "editorIsOpen"
        },
        {
          "command": "grok-integration.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "grok-integration.reviewCode",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "grok-integration.askGrokInline",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "grok-integration.editWithGrok",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e", 
        "when": "editorHasSelection"
      }
    ]
  },
  "dependencies": {
    "openai": "^5.9.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}

