{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out",
    "lib": [
      "es2020",
      "dom"
    ], // Added "dom" to include Node, DocumentFragment, etc.
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Added to skip type checks for third-party libs (helps with dompurify conflicts)
    "forceConsistentCasingInFileNames": true,
    "types": [
      "jest",
      "node",
      "vscode"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/types/**/*.d.ts",
    "**/*.test.ts",
    "src/utils/context.ts",
    "src/utils/token_count.ts",
    "src/utils/display.ts",
    "src/utils/commands.ts"
  ]
}